{% block modals %}
    <!-- Modal -->
{% for virement in virements %}
<div class="modal fade" id="modal-sup-{{ virement.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" action="{{ path('app_virement_delete', {'id': virement.id}) }}">
                <div class="card2">
                    <div class="card2-content  text-center">
    <p class="card2-heading">Êtes-vous sûr de vouloir supprimer ce virement ?</p>
    <p class="card2-description">
        <strong>Num cin:</strong> {{ virement.cinEmetteur }}<br>
        <strong>Etat:</strong> {{ virement.etat }}<br>
        <strong>Type :</strong> {{ virement.type.nom }}<br>
        <!-- Ajoutez d'autres informations du virement selon vos besoins -->
    </p>
</div>

                    <div class="card2-button-wrapper">
                        <button class="card2-button secondary" data-dismiss="modal">Annuler</button>
                        <button class="card2-button primary">Confirmer la Suppression</button>
                    </div>
                </div>
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ virement.id) }}">
            </form>
        </div>
    </div>
</div>
