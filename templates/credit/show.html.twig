{% block title %}Credit{% endblock %}

{% block body %}
    <h1>Credit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ credit.id }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ credit.montant }}</td>
            </tr>
            <tr>
                <th>Taux</th>
                <td>{{ credit.taux }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ credit.duree }}</td>
            </tr>
            <tr>
