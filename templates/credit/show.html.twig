                <td>{{ credit.dateDebut ? credit.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ credit.type }}</td>
            </tr>
            <tr>
                <th>Apport_propre</th>
                <td>{{ credit.apportPropre }}</td>
            </tr>
            <tr>
                <th>Revenu_propre</th>
                <td>{{ credit.revenuPropre }}</td>
            </tr>
            <tr>
                <th>Montant_echeance</th>
                <td>{{ credit.montantEcheance }}</td>
            </tr>
            <tr>
                <th>Date_echeance</th>
                <td>{{ credit.dateEcheance ? credit.dateEcheance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ credit.etat }}</td>
            </tr>
            <tr>
                <th>Nb_echeances_restants</th>
