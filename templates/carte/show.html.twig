{% extends 'base.html.twig' %}

{% block title %}Carte{% endblock %}

{% block body %}
    <h1>Carte</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carte.id }}</td>
            </tr>
            <tr>
                <th>Date_emission</th>
                <td>{{ carte.dateEmission ? carte.dateEmission|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_expiration</th>
                <td>{{ carte.dateExpiration ? carte.dateExpiration|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Cvv</th>
                <td>{{ carte.cvv }}</td>
            </tr>
            <tr>
                <th>Plafond</th>
                <td>{{ carte.plafond }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ carte.type }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ carte.etat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_carte_index') }}">back to list</a>

    <a href="{{ path('app_carte_edit', {'id': carte.id}) }}">edit</a>

    {{ include('carte/_delete_form.html.twig') }}
{% endblock %}
