{% block my_interface %}  
<!-- contenu de la page -->

<div class="container">
    <nav class="menu">
        <ul class="main-menu">
            <li id="ajouter"><i class="fa fa-plus"></i>Ajouter</li>
           
            
         
            <li id="liste"><i class="fa fa-user"></i>Liste</li>
                                    <li id="types" class="active"><i class="fa fa-cog"></i>Gerer les types</li>

        </ul>
    </nav>

<article>
    <div class="row">
    
        <div class="col-md-6">
            {{ include('type_virement/_form.html.twig') }}
            </div>
    
                   <div class="col-md-6">
                    <div class="box box-danger">
                <div class="box-header">
                    <h3 class="box-title">Formulaire D'ajout</h3>
                </div>
                <div class="box-body">
                <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered table-striped dataTable">
                        <thead>
                            <tr role="row">
                                <th >Type</th>
                                <th>Frais bancaires</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                                
                            {% for type in types %}
                                
                            
                            <tr role="row" class="odd">
                                <td class="sorting_1">{{type.nom}}</td>
                             <td style="color:green;">{{type.frais}}</td>
                             <td><a href="{{ path('app_type_virement_delete', {'id': type.id}) }}">supprimer</a></td>
                                                                
                            </tr>

                                  {% endfor %}          
                                         <!-- Ajoutez d'autres lignes de transactions au besoin -->
                        </tbody>
                    
                    </table>
                </div>
            </div>
            
        </div>
                               </div>
</div>
</article>

        
            

</div>
