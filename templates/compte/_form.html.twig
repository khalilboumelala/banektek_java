<article>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-header">
                    <h3 class="box-title">Formulaire D'ajout</h3>
                </div>
                <div class="box-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="row">
                    
                        <div class="col-md-12">
                            <div class="form-group">
<label for="compte_id_user" class="required">Titulaire</label>                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    {{ form_widget(form.id_user, {'attr': {'class': 'form-control', 'placeholder': 'id user','style': 'text-align: center;'}}) }}
                                </div>
                                {% if form_errors(form.id_user) %}
                                    <div class="alert alert-danger">
                                        {{ form_errors(form.id_user) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.type) }}
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-id-card"></i></span>
                                    {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'Type'}}) }}
                                </div>
                                {% if form_errors(form.type) %}
                                    <div class="alert alert-danger">
                                        {{ form_errors(form.type) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.solde) }}
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-money"></i></span>
                                    {{ form_widget(form.solde, {'attr': {'class': 'form-control', 'placeholder': 'XX XXX XXX'}}) }}
                                </div>
                                {% if form_errors(form.solde) %}
                                    <div class="alert alert-danger">
                                        {{ form_errors(form.solde) }}
                                    </div>
                                {% endif %}

                            </div>
                        </div>
                    </div>

                    <div class="row">
                   
                    <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.etat) }}
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    {{ form_widget(form.etat, {'attr': {'class': 'form-control', 'placeholder': 'Etat'}}) }}
                                </div>
                                {% if form_errors(form.etat) %}
                                    <div class="alert alert-danger">
                                        {{ form_errors(form.etat) }}
                                    </div>
                                {% endif %}
                            </div>
                            
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.id_agence) }}
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    {{ form_widget(form.id_agence, {'attr': {'class': 'form-control', 'placeholder': 'id agence'}}) }}
                                </div>
                                {% if form_errors(form.id_agence) %}
                                    <div class="alert alert-danger">
                                        {{ form_errors(form.id_agence) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                    </div>


                    <button type="submit" class="{{ button_css|default('submitbtn') }}">
                        <i class="fa fa-plus"></i> {{ button_label|default('Ajouter'|trans) }}
                    </button>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</article>
